@page
@model MedicoAgendaModel
@{
    ViewData["Title"] = "Agenda";
}

    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <div class="text-center">
            <img src="../source/images/telemedicinaLogo-removebg.png" asp-append-version="true" alt="logo" width="100" height="100">
        </div>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li class="ms-lg-5 navBarLi">
                <a href="/MedicoPages/MedicoHome" class="nav-link">
                <p class="m-0 navBarP">Início</p>
                </a>
                </li>
            <li class="ms-lg-5 navBarLi">
                <a href="/MedicoPages/MedicoAgenda" class="nav-link">
                <p class="m-0 navBarP">Agenda</p>
                </a>
            </li>
            <li class="ms-lg-5 navBarLi">
                <a href="/MedicoPages/MedicoPerfil" class="nav-link">
                <p class="m-0 navBarP">Perfil</p>
                </a>
            </li>
        </ul>
    </header>
    <main>
        <form class="row bgConsulta d-flex align-items-center flex-column">
            <h3 class="text-center" style="color:var(--blue);">Filtrar Agenda</h3>
            <div class="mt-3 m-auto d-flex align-items-center flex-column">
                <div class="d-flex flex-column w-50">
                    <label class="mt-5">Especialidade</label>
                    <select class="form-select w-100">
                        <option disabled selected>Selecione a especialidade</option>
                        <option>Clínico Geral</option>
                        <option>Infectologia</option>
                    </select>
                </div>

                <div class="d-flex flex-column w-50 mb-5">
                    <label class="mt-5">Dia da consulta</label>
                    <input class="form-select w-100" type="date" />
                </div>
            </div>
            <button class="col btn btn-lg w-50 m-5 botaoEntrar">
                Buscar
            </button>
        </form>
    </main>